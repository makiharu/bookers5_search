<%= form_for(book) do |f| %>
  <% if book.errors.any? %>
  <h3><%= book.errors.count %>error occurence</h3>
  <ul>
  	<% book.errors.full_messages.each do |msg| %>
  	  <li><%= msg %></li>
  	<% end %>
  </ul>
  <% end %>

  <div class="field row">
  	<%= f.label :title%>
  	<%= f.text_field :title, class: 'col-xs-12 form-control' %>
  </div>

  <div class="field row">
  	<%= f.label :body %>
  	<%= f.text_area :body, class: 'col-xs-12 form-control' %>
  </div>

  <div class="actions row">
  	<%= f.submit class: 'btn btn-primary col-xs-12' %>
  </div>
<% end %>